{
  "Name": "[(${job.name})]",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "[(${job.runOn})]",
      "labels": {
        "com.lucafaggion.thesis": true
      },
      "TTY": true,
      "OpenStdin": true,
      "Mounts": "[($container?.mounts)]"
    },
    "RestartPolicy": {
      "Condition": "none",
      "MaxAttempts": 0
    }
  },
  "Mode": {
    "Replicated": {
      "Replicas": 1
    }
  }
}