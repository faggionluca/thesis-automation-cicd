{
  "Name": "[(${job.name})]",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "[(${job.runOn})]",
      "labels": {
        "com.lucafaggion.thesis": true
      },
      "TTY": true,
      "OpenStdin": true,
      "Mounts": [[# th:each="mount : ${mounts_internal}"]
        {
          "Type": [(${mount.type})],
          "Source": [(${mount.source})],
          "Target": [(${mount.target})]
        }
      [/]]
    },
    "RestartPolicy": {
      "Condition": "none",
      "MaxAttempts": 0
    }
  },
  "Mode": {
    "Replicated": {
      "Replicas": 1
    }
  }
}