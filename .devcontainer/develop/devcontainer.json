// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
  "name": "Develop Java",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  // "image": "mcr.microsoft.com/devcontainers/java:1-17-bullseye",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "none",
      "installMaven": "false",
      "installGradle": "true"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  // "runArgs": [
  //   "--network=thesis-network",
  //   "--name=developjava",
  //   "--env-file=.devcontainer/develop/.env",
  //   "--label=test-label${env:RUNNER_SERVER_PORT}"
  // ],
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle",
        "sohibe.java-generate-setters-getters"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/develop/install-dev-tools.sh && git config --global core.autocrlf input",
  "mounts": [
    "type=volume,target=${containerWorkspaceFolder}/.gradle,consistency=cached"
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "java -version",
  // Configure tool-specific properties.
  // "customizations": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "root"
}